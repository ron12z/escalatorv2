---
import { Restrictions } from "../scripts/restriction";
const { restrictionKey } = Astro.props;

const restriction = Restrictions[restrictionKey];
---

<option-plain id={restriction.code} class="selection">
	<p>{restriction.description}</p>
</option-plain>

<script>
	class OptionPlain extends HTMLElement {
		connectedCallback() {
			this.addEventListener("click", () => {
				this.classList.toggle("checked");
			});
		}
	}

	customElements.define("option-plain", OptionPlain);
</script>

<style>
	option-plain {
		display: block;
		padding: 2rem;
		background: lightblue;
	}

	.checked {
		background: #21cf30;
	}
</style>
