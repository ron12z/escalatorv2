---
import MainLayout from "../layouts/MainLayout.astro";
import Escalation from "../components/Escalation.astro";
import Restriction from "../components/Restriction.astro";
import { getRestrictions } from "../scripts/restriction";

import restrictions from "../data/restriction.json";
import Inputs from "../components/extraInput/Inputs.astro";

const title = "Home Page";
---

<MainLayout title={title}>
	<Escalation />
	<Restriction restriction={restrictions.sa1} />
	<Restriction restriction={restrictions.email} />
	<Restriction restriction={restrictions.threshold} />
	<Restriction restriction={restrictions.njClient} />
	<Restriction restriction={restrictions.nameMismatch} />
</MainLayout>

<script>
	// Any click on the page will update the result
	import Escalation from "../scripts/escalation";
	document.querySelector("html")!.addEventListener("click", () => {
		Escalation.updateResult();
	});
</script>
