<style>
	footer {
		text-align: center;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		padding: 1rem;
		background: rgba(53, 53, 53, 0.822);
		color: white;
		width: 100%;
	}
	#show-QR {
		cursor: pointer;
		color: rgb(172, 179, 255);
	}
	.donate-info {
		flex-direction: column;
		position: fixed;
		right: 1rem;
		bottom: 1rem;
		color: black;
		font-size: large;
		font-weight: 600;
		gap: 0.5rem;
		border: 1.5px solid black;
		padding: 0.5rem;
		border-radius: 0.5rem;
		background: lightblue;
	}
</style>

<script>
	const showQR = document.querySelector("#show-QR")!;
	const donateInfo = document.querySelector(".donate-info")!;

	// Toggle QR visibility
	showQR.addEventListener("click", () => {
		if ((donateInfo as HTMLElement).style.display === "none") {
			(donateInfo as HTMLElement).style.display = "flex";
		} else {
			(donateInfo as HTMLElement).style.display = "none";
		}
	});

	// Initialize first state (hidden)
	(donateInfo as HTMLElement).style.display = "none";

	// Hide QR when clicked
	(donateInfo as HTMLElement).addEventListener("click", () => {
		(donateInfo as HTMLElement).style.display = "none";
	});
</script>
